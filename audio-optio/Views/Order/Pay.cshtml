             </div>

        <div id="paypal">
            <div class="row">
                <div class="col-sm-1">
                    @Html.RadioButtonFor(model => model.payPaypal, true, new { name = "paypal", id = "pay_paypal" })
                </div>
                <div class="col-sm-pull-12">
                    <span>Pay with Paypal</span>
                </div>
            </div>

        </div>*@
    <input class="transition-button" type="submit" value="Pay with Paypal" />

}


<script type="text/javascript">
    $(document).ready(function () {
        $("#same").click(function () {
            if ($("#same").prop("checked")) {
                $("#shipping_address").hide(1000);
            }
            else {
                $("#shipping_address").show(1000);
            }
        })

        $("#pay_cc").click(function () {

            if ($("#pay_cc").prop("checked")) {
                $("#cc_fields").show(1000);
            }
            else {
                $("#cc_fields").hide(1000);
            }

        });

        $("#pay_paypal").click(function () {

            if ($("#pay_paypal").prop("checked")) {
                $("#cc_fields").hide(1000);
            }
            else {
                $("#cc_fields").show(1000);
            }

        });

    })
</script>
